<h1 class="title">Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <div class="col">
            <h2>Burgers Available</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div>
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.burger_name}}
                    <button type="submit" class="btn btn-primary" id="burger-ready">DEVOUR IT</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>
        <div class="col">
            <img src="assets/img/burger.jpg" id="burgerIMG">
        </div>
        <div class="col">
            <h2>Burgers Devoured</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div>
                {{this.burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<form id="add-burger" action="/burgers" class="create-form" method="POST">
  <div class="form-group">
    <h2 id="inputheading">What do you want to eat?</h2>
    <input type="text" class="form-control" id="enter-burger" name="burger_name">
    <small id="burger-help" class="form-text text-muted">Type your burger here, then submit.</small>
  </div>
  <button type="submit" id="submit-burger" class="btn btn-primary">Submit</button>
</form>
